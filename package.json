{
  "name": "react-hook-layout",
  "version": "1.0.0",
  "description": "Layout management in React.",
  "main": "./lib/index.js",
  "scripts": {
    "build": "babel src -d lib",
    "build:docs": "cd ./storybook && npm run build-storybook && cd ..",
    "lint": "npx eslint ./src",
    "test:lib": "LIB=1 jest",
    "test:watch": "jest --watchAll",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ytiurin/react-hook-layout.git"
  },
  "keywords": [
    "hooks",
    "layout",
    "react-hooks",
    "react"
  ],
  "author": "Eugene Tiurin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ytiurin/react-hook-layout/issues"
  },
  "homepage": "https://github.com/ytiurin/react-hook-layout#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-modules-umd": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@testing-library/react": "^10.0.2",
    "eslint": "^6.8.0",
    "jest": "^25.2.7",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "files": [
    "lib"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-transform-modules-umd"
    ],
    "moduleId": "reactHookLayout"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test",
      "pre-publish": "npm run build"
    }
  },
  "jest": {
    "verbose": true,
    "watchPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  }
}
